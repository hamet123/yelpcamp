<link rel="stylesheet" href="/css/global.css">

</head>
	
	<body style="margin-top:50px">
	
<!-- //===========================================
				Main Navigation Bar
//=========================================== -->

			<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <a class="navbar-brand" href="/">YelpCamp</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">
		<% if(!currentUser){ %>
		<li class="nav-item">
        <a class="nav-link" href="/login">Login <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/register">SignUp</a>
      </li>
		<% } else { %>
	<li class="nav-item">
        <a class="nav-link" href="#">Signed in as <%= currentUser.username %></a>
      </li>
	<li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
      </li>
		<% } %>
      
    </ul>
  </div>
</nav>
		
		
<!-- //===========================================
				Error handling
//=========================================== -->
		
	<div class="container animated fadeIn">
		<% if(specialErrors && specialErrors.length>0){ %>
			<br>
			<div class="alert alert-danger" id="message" role="alert" style="margin-bottom:-50px; border: 1px solid red;">
  		<%= specialErrors %>
			</div>
		<% } %>
		
		<% if (success && success.length>0){ %>
			<div class="alert alert-success" id="message" role="alert" style="margin-bottom:-50px; margin-top:60px; border: 1px solid green;">
  			<%=success%>
			</div>
		<% } %>
		
		<% if (error && error.length>0){ %>
			<div class="alert alert-danger" id="message" role="alert" style="margin-bottom:-50px; margin-top:60px; border: 1px solid red;">
  			<%= error %>
			</div>
		<% } %>
</div>
		



	