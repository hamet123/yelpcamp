<%- include("partials/header") %>
<link rel="stylesheet" href="/css/campgroundsindex.css">
<%- include ("partials/header2") %>

<header>
	<div class="jumbotron headsection">
		<div class="container">
			<h1>These are the added campgrounds !!!</h1>
			<p>Welcome to the yelpcamp campgrounds !!!</p>
			<a href="/campgrounds/new" class="btn">Add a New CampGround !!!</a>
		</div>
	</div>
</header>	


<div class="container">
	<div class="row">
		<% campgrounds.forEach((campground)=>{ %>
			<div class="col-lg-4 col-md-6 my-5">
				<figure class="figure">
  					<img src="<%= campground.image %>" class="figure-img img-fluid rounded" style="height:250px">
 						<figcaption class="figure-caption"><%= campground.name %></figcaption>
						<a href="/campgrounds/<%=campground._id%>" class="btn btn-info mt-4">More Info</a>
				</figure>
			</div>
		<% }); %>
	</div>
</div>



<%- include("partials/header") %>
	

